<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="text_start">
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/antic</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="text_next_frag">
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/antic</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="text_next">
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/antic</item>
        <item name="android:textColor">@color/description</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">italic|bold</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="text_next_description">
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/antic</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="btn_start">
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/antic</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:background">@drawable/buttons_gradient</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:background">@color/purple</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:fontFamily">@font/antic</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>